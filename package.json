{
  "name": "crypto-watcher-bun",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "start:prod": "bun run dist/index.js",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "format": "bunx @biomejs/biome format --write src",
    "lint": "bunx @biomejs/biome check --write src"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "node-cron": "^4.2.1",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  }
}