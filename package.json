{
  "name": "crypto-watcher-bun",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "version": "1.4.1",
  "scripts": {
    "start": "bun run src/index.ts",
    "start:prod": "NODE_ENV=production bun run dist/index.js",
    "dev": "NODE_ENV=development bun --watch src/index.ts",
    "build": "NODE_ENV=production bun build src/index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "prepare": "husky install",
    "format": "bunx @biomejs/biome format --write src",
    "lint": "bunx @biomejs/biome check --write src"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/bun": "latest",
    "husky": "^9.1.7"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "figlet": "^1.10.0",
    "node-cron": "^4.2.1",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  }
}
